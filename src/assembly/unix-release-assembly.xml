<assembly 
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 
  http://maven.apache.org/xsd/assembly-1.1.2.xsd">
 
  <!-- Assembles a release tar with jars, scripts and property files etc for unix based systems-->
  <id>assemble-unix-release</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	
	<files>
		<file>
			<source>target/unix-assembly/${artemis.signed.jar.name}</source>
			<outputDirectory>${unix.assembly.folder}</outputDirectory>
			<destName>artemis.jar</destName>
		</file>
		<file>
			<source>target/unix-assembly/${act.signed.jar.name}</source>
			<outputDirectory>${unix.assembly.folder}</outputDirectory>
			<destName>act.jar</destName>
		</file>
		<file>
			<source>target/unix-assembly/${dnaplotter.signed.jar.name}</source>
			<outputDirectory>${unix.assembly.folder}</outputDirectory>
			<destName>dnaplotter.jar</destName>
		</file>
		<file>
			<source>target/unix-assembly/${bamview.signed.jar.name}</source>
			<outputDirectory>${unix.assembly.folder}</outputDirectory>
			<destName>bamview.jar</destName>
		</file>
	</files>
	<fileSets>
		<fileSet>
			<directory>etc</directory>
			<outputDirectory>${unix.assembly.folder}/etc</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<outputDirectory>${unix.assembly.folder}</outputDirectory>
			<includes>
				<include>AUTHORS</include>
				<include>LICENSE</include>
				<include>README*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>${unix.assembly.folder}</outputDirectory>
			<includes>
				<include>art</include>
				<include>act</include>
				<include>dnaplotter</include>
				<include>bamview</include>
				<include>setenv</include>
			</includes>
			<fileMode>0755</fileMode>
			<lineEnding>unix</lineEnding>
		</fileSet>
	</fileSets>
</assembly>

